@page
@model FinalCourseworkTemplate.CadetCreatorModel
@{
    ViewData["Title"] = "CadetCreator";
}

<h1>CadetCreator</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Year
            </th>
            <th>
                Form
            </th>
            <th>
                Gender
            </th>
            <th>
                Rank
            </th>
            <th>
                Platoon
            </th>
            <th>
                Section
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadet in Model.Cadets)
        {
            <tr>
                <td>
                    @cadet.Surname, @cadet.KnownAs
                </td>
                <td>
                    @cadet.Year
                </td>
                <td>
                    @cadet.Form
                </td>
                <td>
                    @cadet.Gender
                </td>
                <td>
                    @cadet.Rank
                </td>
                <td>
                    @cadet.Platoon
                </td>
                <td>
                    @cadet.Section
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post">
    <table>
        <tbody>
            <tr>
                <td>
                    Surname
                </td>
                <td>
                    Known As
                </td>
                <td>
                    School Year
                </td>
                <td>
                    School Form
                </td>
                <td>
                    Gender
                </td>
                <td>
                    Rank
                </td>
                <td>
                    Platoon
                </td>
                <td>
                    Section
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" asp-for="lastName" size="17" />
                </td>
                <td>
                    <input type="text" asp-for="firstName" size="17" />
                </td>
                <td>
                    <input type="number" asp-for="schoolYear" style="width: 6em" min="9" max="13" />
                </td>
                <td>
                    <input type="text" asp-for="schoolForm" size="13" />
                </td>
                <td>
                    <input type="text" asp-for="gender" size="15" />
                </td>
                <td>
                    <input type="text" asp-for="rank" size="11" />
                </td>
                <td>
                    <input type="number" asp-for="platoon" style="width: 9em" min="1" max="3" />
                </td>
                <td>
                    <input type="number" asp-for="section" style="width: 9em" min="1" max="3" />
                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit">Submit</button>
</form>

@{
    if (TempData.Peek("tempString") != null)
    {
        <h3>@TempData.Peek("tempString")</h3>
    }
}
