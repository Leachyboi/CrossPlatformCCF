@page
@model FinalCourseworkTemplate.FullViewModel
@{
    ViewData["Title"] = "Full View";
}

<h1>Qualification</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Surname
            </th>
            <th>
                Qualification Count
            </th>
            <th>
                Qualification Names
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadet in Model.Cadets)
        {
            <tr>
                <td>
                    @cadet.Surname
                </td>
                <td>
                    @cadet.Qualifications.Count
                </td>
                <td>
                    @* displays qualification names and passmarks with line breaks *@
                    <table class="table-secondary bg-secondary">
                        <th>
                            Qualification Name
                        </th>
                        <th>
                            Pass Mark
                        </th>
                        <th>
                            Cadet's Mark
                        </th>
                        @foreach (var qualification in cadet.Qualifications)
                        {
                            <tr>
                                @qualification.Qualification.Name
                            </tr>
                            <tr>
                                @qualification.Qualification.PassMark
                            </tr>
                            <tr>
                                @qualification.cadMark
                            </tr>   
                            <br />
                        }
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
