@page
@model FinalCourseworkTemplate.CadetEditModel
@{
    ViewData["Title"] = "Cadet Editor";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Cadet Editor</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Known As
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Age
                </th>
                <th>
                    Year
                </th>
                <th>
                    Form
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Rank
                </th>
                <th>
                    Platoon
                </th>
                <th>
                    Section
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" asp-for="forNameFilter" size="17" />
                </td>
                <td>
                    <input type="text" asp-for="surNameFilter" size="17" />
                </td>
                <td>
                    <input type="number" asp-for="ageFilter" style="width: 6em" min="-1" />
                </td>
                <td>
                    <input type="number" asp-for="yearFilter" style="width: 6em" min="-1" />
                </td>
                <td>
                    <input type="text" asp-for="formFilter" style="width: 6em" />
                </td>
                <td>
                    <input type="text" asp-for="genderFilter" style="width: 6em" />
                </td>
                <td>
                    <input type="text" asp-for="rankFilter" style="width: 6em" />
                </td>
                <td>
                    <input type="number" asp-for="platoonFilter" style="width: 6em" min="-1" max="3" />
                </td>
                <td>
                    <input type="number" asp-for="sectionFilter" style="width: 6em" min="-1" max="3" />
                </td>
            </tr>
            @for (var i = 0; i < Model.Cadets.Count; i++)
            {
                <tr>
                    <td>
                        <input type="text" asp-for="@Model.Cadets[i].KnownAs" 
                               value="@Model.Cadets[i].KnownAs" size="17" />
                    </td>
                    <td>
                        <input type="text" asp-for="@Model.Cadets[i].Surname" 
                               value="@Model.Cadets[i].Surname" size="17" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Cadets[i].Age" 
                               value="@Model.Cadets[i].Age" style="width: 6em" min="13" max="100" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Cadets[i].Year" 
                               value="@Model.Cadets[i].Year" style="width: 6em" min="9" max="14" />
                    </td>
                    <td>
                        <input type="text" asp-for="@Model.Cadets[i].Form" 
                               value="@Model.Cadets[i].Form" style="width: 6em" />
                    </td>
                    <td>
                        <input type="text" asp-for="@Model.Cadets[i].Gender" 
                               value="@Model.Cadets[i].Gender" style="width: 6em" />
                    </td>
                    <td>
                        <input type="text" asp-for="@Model.Cadets[i].Rank" 
                               value="@Model.Cadets[i].Rank" style="width: 6em" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Cadets[i].Platoon" 
                               value="@Model.Cadets[i].Platoon" style="width: 6em" min="1" max="3" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Cadets[i].Section" 
                               value="@Model.Cadets[i].Section" style="width: 6em" min="1" max="3" />
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Cadets[i].CadetId" 
                               value="@Model.Cadets[i].CadetId" hidden="hidden" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" asp-page-handler="Filter">Filter</button>
    <button type="submit" asp-page-handler="Submit">Submit</button>
</form>